---
interface Winner {
    imageUrl: string;
    title: string; // Making it optional, as you might rely on the default places array
    titleColor: string;
    name: string;
}

interface Props {
    winners: Winner[];
}

const { winners } = Astro.props;
---

<style>
    .winners-block {
        display: flex;
        flex-direction: column;
        width: 100%;
        justify-content: center;
        align-items: center;
    }

    .winners-container {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        width: 100%;
    }

    .winner {
        text-align: center;
        flex: 1;
        max-width: calc(33.33% - 1rem); /* Accounting for the gap */
    }

    .winner-title {
        font-size: 1.5rem;
    }

    .winner-name {
        font-size: 1.3rem;
    }

    .winner img {
        width: 100%;
        height: auto;
        object-fit: cover;
        border-radius: 1rem;
    }

    @media (max-width: 768px) {
        .winners-container {
            flex-direction: column;
            align-items: center;
        }
        .winner {
            max-width: 100%;
        }
    }
</style>

<div class="winners-block">
    <h1 id="section-title">WINNERS</h1>
    <div class="winners-container">
        {
            winners.map((winner) => (
                <div class="winner">
                    <img src={winner.imageUrl} alt={winner.name} />
                    <strong
                        class="winner-title"
                        style={`color: ${winner.titleColor}`}
                    >
                        {winner.title}
                    </strong>
                    <div class="winner-name">{winner.name}</div>
                </div>
            ))
        }
    </div>
</div>
