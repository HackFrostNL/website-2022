---
interface Props {
	title: string;
	startDate: string;
	endDate: string;
    year: string;
}

const { title, startDate, endDate, year } = Astro.props;
---

<style>
	@import url("https://fonts.googleapis.com/css2?family=Josefin+Sans&display=swap");
	.title-block {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
		font-family: "Josefin Sans", sans-serif;
		text-shadow: rgba(255, 252, 245, 0.24) 0px 3px 0px;
        gap: 1rem;
	}

	.title {
		font-size: 70pt;
		font-weight: bold;
		text-align: center;
	}

	#quadcolor {
		display: -webkit-box;
		display: -webkit-flex;
		display: -ms-flexbox;
		display: flex;
		margin-top: 10px;
		margin-bottom: 10px;
	}

	.snowflake {
		-webkit-mask-image: url(data:image/svg+xml;base64,);
		-webkit-mask-size: 20px 20px;
		mask-image: url(data:image/svg+xml;base64,);
		mask-size: 20px 20px;
		width: 20px;
		height: 20px;
		margin-right: 10px;
		margin-left: 10px;
		border-radius: 50%;
		animation: quadcolor 1.3s linear infinite;
	}

	.snowflake.red {
		background-color: #fa524e;
	}

	.snowflake.blue {
		background-color: #79d7ff;
		animation-delay: 0.325s;
	}
	.snowflake.yellow {
		background-color: #ffda4a;
		animation-delay: 0.65s;
	}

	.snowflake.green {
		background-color: #7ed957;
		animation-delay: 0.975s;
	}

	@keyframes quadcolor {
		0%,
		60%,
		100% {
			transform: initial;
		}

		30% {
			transform: translateY(-15px);
		}
	}

	.event-date {
		text-align: center;
	}

	.day-month {
		font-size: 24pt;
        font-weight: 300;
        text-transform: uppercase;
	}

	.year {
		font-size: 50pt;
        font-weight: 600;
	}
</style>

<div class="title-block">
	<div class="title">{title}</div>

	<div id="quadcolor">
		<div class="snowflake red"></div>
		<div class="snowflake blue"></div>
		<div class="snowflake yellow"></div>
		<div class="snowflake green"></div>
	</div>

	<div class="event-date">
		<div class="day-month">{startDate} - {endDate}</div>
		<div class="year">{year}</div>
	</div>
</div>
